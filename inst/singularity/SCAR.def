bootstrap: docker
From: continuumio/miniconda3

%post

## Allow conda to run.

. /opt/conda/etc/profile.d/conda.sh

## Update conda.

conda update -n base -y -c defaults conda

## Install required software.

conda create -n SCAR_env -y -c conda-forge -c bioconda -c defaults \
r-base r-devtools r-tidyverse r-data.table r-stringr r-ggpubr r-biocmanager \
bioconductor-edger bioconductor-deseq2 bioconductor-rsubread \
bioconductor-chipseeker bioconductor-rsamtools \
fastqc star samtools bowtie2 deeptools bedtools homer \
parallel requests

## Update environment.

conda update -n SCAR_env -y -c conda-forge -c bioconda -c defaults --all

## Clean up extra files.

conda clean -y --all

## Activate SCAR_env.

conda activate SCAR_env

## Get compression tools for linux

apt-get -y update
apt-get -y install build-essential zlib1g-dev

## Set unpack target, extract necessary packages, install SCAR

R --slave -e "Sys.setenv(TAR='/bin/tar'); \
BiocManager::install(ask = FALSE); \
devtools::install_github('Bankso/SCAR', ref='main')"

## install SEACR.

git clone https://github.com/FredHutch/SEACR

## add bind point for working directory

mkdir /opt/conda/process

%environment

export PATH=/SEACR/:/opt/conda/envs/SCAR_env/bin/:$PATH
